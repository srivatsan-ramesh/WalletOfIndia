<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg"
        android:orientation="vertical"
        tools:context="com.example.srivatsan.material.MainActivity">
        <android.support.v4.widget.DrawerLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/drawer_layout">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="10dp">


                <ImageView
                    android:id="@+id/disp_pic"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/ic_launcher" />


                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="NAME"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <TextView
                    android:id="@+id/user_loc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Chennai"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout

                        android:layout_width="88dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingBottom="15dp"
                        android:paddingTop="15dp">


                        <ImageView
                            android:id="@+id/offer_wall"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:elevation="10dp"
                            style="@style/monthly_round"
                            android:src="@drawable/offer_wall" />


                        <TextView
                            android:layout_width="78dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Offer Wall" />

                    </LinearLayout>

                    <LinearLayout

                        android:layout_width="88dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingBottom="0dp"
                        android:paddingTop="15dp">


                        <ImageView
                            android:id="@+id/refer_a_friend"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:elevation="10dp"
                            style="@style/math_round"
                            android:src="@drawable/refer_a_friend" />


                        <TextView
                            android:layout_width="78dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Refer\nA Friend" />

                    </LinearLayout>

                    <LinearLayout

                        android:layout_width="88dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingBottom="15dp"
                        android:paddingTop="15dp">


                        <ImageView
                            android:id="@+id/transfer"
                            style="@style/memory_round"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:elevation="10dp"
                            android:src="@drawable/transfer" />


                        <TextView

                            android:layout_width="78dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Transfer" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout

                        android:layout_width="88dp"
                        android:layout_height="match_parent"


                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingBottom="0dp"
                        android:paddingTop="15dp">


                        <ImageView
                            android:id="@+id/math_challenge"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_gravity="center"
                            android:elevation="10dp"
                            style="@style/math_round"
                            android:src="@drawable/chal1_page1_icon"
                            android:transitionName="math"/>


                        <TextView

                            android:layout_width="78dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Math\nChallenge" />

                    </LinearLayout>

                    <LinearLayout

                        android:layout_width="88dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingBottom="0dp"
                        android:paddingTop="15dp">


                        <ImageView
                            android:id="@+id/memory_challenge"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:elevation="10dp"
                            android:layout_gravity="center"
                            android:src="@drawable/chal2_page1_icon"
                            style="@style/memory_round"
                            android:transitionName="memory"/>


                        <TextView

                            android:layout_width="78dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Memory\nChallenge" />

                    </LinearLayout>

                    <LinearLayout

                        android:layout_width="88dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingBottom="0dp"
                        android:paddingTop="15dp">


                        <ImageView
                            android:id="@+id/monthly_challenge"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:elevation="10dp"
                            android:src="@drawable/chal3_page1_icon"
                            android:layout_gravity="center"
                            style="@style/monthly_round"
                            android:transitionName="monthly"/>


                        <TextView

                            android:layout_width="78dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Monthly\nChallenge" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout

                        android:layout_width="88dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingBottom="15dp"
                        android:paddingTop="15dp">


                        <ImageView
                            android:id="@+id/friends"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:elevation="10dp"
                            style="@style/memory_round"
                            android:src="@drawable/friends" />


                        <TextView

                            android:layout_width="78dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Friends" />

                    </LinearLayout>

                    <LinearLayout

                        android:layout_width="88dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingBottom="15dp"
                        android:paddingTop="15dp">


                        <ImageView
                            android:id="@+id/shopping"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:elevation="10dp"
                            style="@style/monthly_round"
                            android:src="@drawable/shopping" />


                        <TextView

                            android:layout_width="78dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Shopping" />

                    </LinearLayout>

                    <LinearLayout


                        android:layout_width="88dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingBottom="15dp"
                        android:paddingTop="15dp">


                        <ImageView
                            android:id="@+id/transactions"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:elevation="10dp"
                            android:src="@drawable/transaction"
                            style="@style/math_round"/>


                        <TextView

                            android:layout_width="78dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Transaction" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </ScrollView>
            <fragment
                android:id="@+id/fragment_navigation_drawer"
                android:layout_width="280dp"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                app:layout="@layout/fragment_navigation_drawer"
                android:name="com.example.srivatsan.material.NavigationDrawerFragment"
                tools:layout="@layout/fragment_navigation_drawer" />
        </android.support.v4.widget.DrawerLayout>
    </LinearLayout>


</LinearLayout>
